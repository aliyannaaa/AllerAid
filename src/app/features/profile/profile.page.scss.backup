    margin: 0 8px 10px;
  }
}



.medication-search {
  margin-bottom: 8px;
  
  // Mobile: better touch targets and spacing
  ion-searchbar {
    @media (max-width: 480px) {
      --padding-start: 8px;
      --padding-end: 8px;
      font-size: 16px; // Prevents zoom on iOS
    }
  }
}

.medication-filters {
  // Mobile: ensure segment buttons are readable
  ion-segment {
    @media (max-width: 480px) {
      ion-segment-button {
        min-height: 44px; // Better touch target
        
        ion-label {
          font-size: 14px;
          font-weight: 500;
        }
      }
    }
    
    @media (max-width: 360px) {
      ion-segment-button {
